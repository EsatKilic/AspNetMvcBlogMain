@model List<Post>

<section class="section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="row">
                    @foreach (var post in Model)
                    {
                        <div class="col-lg-3 col-md-6">
                            <article class="post-grid mb-5">
                                <a class="post-thumb mb-4 d-block" href="blog-single.html">
                                    <img src="/images/news/f1.jpg" alt="" class="img-fluid w-100">
                                </a>
                               
                                @foreach (var category in post.Categories)
                                {
                                    <a class="cat-name text-color font-extra text-sm text-uppercase letter-spacing-1" style="margin-left: 10px;" asp-route="Category" asp-route-slug="@category.Slug">
                                        @category.Name
                                    </a>
                                }

                                <h3 class="post-title mt-1"><a asp-route="Blog" asp-route-slug="@post.Slug">@post.Title</a></h3>
                                <span class="text-muted letter-spacing text-uppercase font-sm">@post.CreatedAt.ToShortDateString()</span>
                            </article>
                        </div>
                    }
                </div>
            </div>
            <div class="m-auto">
                <div class="pagination mt-5 pt-4">
                    <ul class="list-inline ">
                        <li class="list-inline-item"><a href="#" class="active">1</a></li>
                        <li class="list-inline-item"><a href="#">2</a></li>
                        <li class="list-inline-item"><a href="#">3</a></li>
                        <li class="list-inline-item"><a href="#" class="prev-posts"><i class="ti-arrow-right"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
