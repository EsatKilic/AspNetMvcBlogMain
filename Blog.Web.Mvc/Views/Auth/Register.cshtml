@model RegisterViewModel

<div class="container">
    <div class="row">
        <div class="col-4 offset-4">
            <h1>Sign up</h1>
            <form asp-action="Register">

                <span class="text-danger" asp-validation-summary="All"></span>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control form-control-email" type="text" required>
                    <span asp-validation-for="Name"></span>
                </div>


                <div class="form-group">
                    <label asp-for="SurName"></label>
                    <input asp-for="SurName" class="form-control form-control-email" type="text" required>
                    <span asp-validation-for="SurName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmailAddress"></label>
                    <input asp-for="EmailAddress" class="form-control form-control-email" type="email" required>
                    <span asp-validation-for="EmailAddress"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control form-control-password" type="password" required>
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone"></label>
                    <input asp-for="Phone" class="form-control form-control-email" type="text" required>
                    <span asp-validation-for="Phone"></span>
                </div>

                <div class="d-flex justify-content-between mt-3 mb-2">
                    <button class="btn btn-primary solid blank" type="submit">Sign Up</button>
                    <h3 class="text-danger mt-1 me-2">@ViewBag.Error</h3>
                </div>
                <a asp-controller="Auth" asp-action="Login">Have Account? Login</a>
            </form>
        </div>
    </div>
</div>


