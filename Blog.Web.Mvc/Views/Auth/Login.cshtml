@model LoginViewModel

<div class="container">
    <div class="row">
        <div class="col-4 offset-4">
            <h1>Login</h1>
            <form asp-action="Login" 
           asp-route-returnUrl="" method="post" >
                <div class="mb-3">
                    <label asp-for="EmailAddress"></label>
                    <input asp-for="EmailAddress" class="form-control form-control-email" type="email" required>
                    <span asp-validation-for="EmailAddress"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control form-control-password" type="password" required>
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="d-flex justify-content-between  mt-3 mb-2">
                    <button class="btn btn-primary solid blank" type="submit">Login</button>
                    <h3 class="text-danger mt-1 me-2">@ViewBag.Error</h3>
                </div>
                <div class="d-flex justify-content-between px-2">
                    <a asp-controller="Auth" asp-action="ForgotPassword">Şifremi Unuttum.</a>
                    <a asp-controller="Auth" asp-action="Register">Hesabın yok mu? Kayıt Ol</a>
                </div>
            </form>
        </div>
    </div>
</div>

    <partial name="_ValidationScriptsPartial" />